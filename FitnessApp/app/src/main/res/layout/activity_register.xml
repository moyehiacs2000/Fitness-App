<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    tools:context=".Activities.RegisterActivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R e g i s t e r"
            android:textColor="@color/colorwhite"
            android:textSize="25dp"
            android:elevation="3dp"
            android:fontFamily="@font/almendra"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/image"
            android:layout_marginBottom="50dp"
            android:layout_alignLeft="@+id/image"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Is Not EnoughIf Better \n Is Possible Is Possible Is "
            android:textColor="@color/colorwhite"
            android:textSize="16dp"
            android:elevation="3dp"
            android:fontFamily="@font/almendra"
            android:layout_alignBottom="@+id/image"
            android:layout_marginBottom="10dp"
            android:layout_alignLeft="@+id/image"
            android:layout_marginLeft="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image"
            android:background="@drawable/transparent_diagonal"
            android:elevation="2dp"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/regiterpoto">

        </ImageView>
    </RelativeLayout>
    <EditText
        android:id="@+id/username"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="User Name"
        android:drawableLeft="@drawable/ic_person_24"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:inputType="textPersonName"
        android:textColorHint="#FFFBF8"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ed_radio"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:textColorHint="#FFFBF8"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_email_24"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPersonName"
        android:background="@drawable/ed_radio"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColorHint="#FFFBF8"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"
        android:background="@drawable/ed_radio"/>
    <EditText
        android:id="@+id/retypepassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Retype Password"
        android:textColorHint="#FFFBF8"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"
        android:background="@drawable/ed_radio"/>
    <Button
        android:id="@+id/button_Register"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Register"
        android:textColor="@color/colorwhite"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round"
        app:layout_constraintTop_toBottomOf="@+id/retypepassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>